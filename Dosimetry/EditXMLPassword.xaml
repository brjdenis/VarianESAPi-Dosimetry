<Window x:Class="Dosimetry.EditXMLPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dosimetry"
        mc:Ignorable="d"
        Title="EditXMLPassword" Height="162" Width="300">
    <Window.Resources>
        <Style TargetType="{x:Type Button}"/>
        <Style TargetType="{x:Type Label}"/>
        <Style TargetType="{x:Type Border}"/>
        <Style TargetType="{x:Type PasswordBox}"/>
    </Window.Resources>
    <Grid>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="23,25,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="EditXMLPasswordBox" HorizontalAlignment="Left" Margin="85,25,0,0" VerticalAlignment="Top" Height="26" Width="150" PasswordChar="*" MaxLength="10" PasswordChanged="hasPasswordChanged"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="55,80,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" IsDefault="True"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="150,80,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Label x:Name="EditXMLPasswordSucessLabel" Content="" HorizontalAlignment="Left" Margin="237,25,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
